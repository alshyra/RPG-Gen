{
  "name": "rpg-gen-monorepo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "npm install",
    "start:backend": "npm --workspace rpg-gemini-backend run start:dev",
    "start:frontend": "npm --workspace rpg-gemini-frontend run dev",
    "start:dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "test:backend": "npm --workspace rpg-gemini-backend run test",
    "test:frontend": "npm --workspace rpg-gemini-frontend run test",
    "e2e:prepare-db": "node scripts/prepare-e2e-db.mjs",
    "e2e:cleanup-db": "node scripts/prepare-e2e-db.mjs -- --cleanup",
    "test": "npm run test:backend && npm run test:frontend",
    "test:e2e": "npm -w rpg-gemini-frontend run test:e2e",
    "lint": "npm --workspace rpg-gemini-backend run lint && npm --workspace rpg-gemini-frontend run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "dependencies": {
    "@nestjs/cli": "^11.0.12",
    "tsconfig-paths": "^4.2.0"
  }
}
