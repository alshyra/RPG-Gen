    "rimraf": "^6.1.0",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.5.0",
    "@types/node": "^24.10.1",
    "ava": "^6.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4"
  },
  "ava": {
    "files": [
      "test/**/*.test.ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ],
    "extensions": [
      "ts"
    ]
  }
