FROM node:25.2.0-alpine3.22 AS builder

WORKDIR /app

COPY . .
RUN npm ci
RUN npm --workspace rpg-gemini-frontend run build

FROM nginx:alpine

COPY --from=builder /app/packages/frontend/dist /usr/share/nginx/html
COPY packages/frontend/nginx/nginx.conf.prod /etc/nginx/conf.d/default.conf

RUN apk add --no-cache ca-certificates \
    && update-ca-certificates \
    && mkdir -p /etc/ssl/certs

EXPOSE 80
