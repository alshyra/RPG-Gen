FROM node:25.2.0-alpine3.22 AS builder

WORKDIR /app

COPY . .
RUN npm ci
RUN npm --workspace rpg-gemini-frontend run build

FROM nginx:alpine

COPY --from=builder /app/packages/frontend/dist /usr/share/nginx/html
COPY packages/frontend/nginx/nginx.conf.template /etc/nginx/conf.d/default.conf.template
COPY packages/frontend/nginx/docker-entrypoint.sh /docker-entrypoint.sh
RUN chmod +x /docker-entrypoint.sh

RUN apk add --no-cache ca-certificates \
    && update-ca-certificates \
    && mkdir -p /etc/ssl/certs

ENV BACKEND_URL=http://backend:3001

EXPOSE 80

ENTRYPOINT ["/docker-entrypoint.sh"]
